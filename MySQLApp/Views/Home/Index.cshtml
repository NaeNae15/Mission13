@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>
<h1>@(ViewBag.Title != null ? ViewBag.Title : " All Bowlers'") Contact Information</h1>

<div class="row m-1 p-1">
    <div id="types" class="col-3">
        <vc:teams></vc:teams>
    </div>
    <div class="col-9">
        @foreach (Bowler b in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName </h4>
                    <h6 class="card-text">@b.BowlerAddress</h6>
                    <h6 class="card-text">@b.BowlerCity, @b.BowlerState @b.BowlerZip</h6>
                    <h6 class="card-text">@b.BowlerPhoneNumber</h6>
                    <br />
                    <a class="btn btn-warning" style="display:unset" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a>
                    <a class="btn btn-danger" style="display:unset" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a>

                </div>


            </div>
        }
    </div>
</div>